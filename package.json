{
  "name": "confluence-sync",
  "type": "module",
  "version": "0.1.0",
  "description": "Bi-directional sync tool for Confluence and local markdown files",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/confluence-sync.git"
  },
  "keywords": [
    "confluence",
    "sync",
    "markdown",
    "atlassian",
    "documentation",
    "bidirectional",
    "cli"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.cts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "bin": "./dist/cli.cjs",
  "files": [
    "dist"
  ],
  "engines": {
    "bun": ">=1.1.0"
  },
  "zshy": {
    "bin": "./src/cli.ts",
    "exports": "./src/index.ts"
  },
  "scripts": {
    "build": "zshy",
    "cli": "bun run ./src/cli.ts",
    "test": "vitest run",
    "lint": "eslint ./src --ext .ts,.tsx",
    "lint:fix": "eslint ./src --ext .ts,.tsx --fix",
    "download:openapi": "bun run scripts/download-openapi.ts",
    "gen:openapi": "openapi-typescript ./src/openapi/confluence-openapi.json --output ./src/api/types.ts"

  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "@zowe/secrets-for-zowe-sdk": "^8.24.2",
    "chalk": "^5.5.0",
    "commander": "14.0.0",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "inquirer": "^12.9.0",
    "openapi-fetch": "0.14.0",
    "ora": "^8.2.0",
    "p-limit": "6.2.0",
    "zod": "^4.0.15",
    "zshy": "^0.3.5"
  },
  "devDependencies": {
    "@nyxb/eslint-config": "^3.1.0",
    "@types/bun": "latest",
    "eslint": "^9.32.0",
    "msw": "2.10.4",
    "openapi-typescript": "7.8.0",
    "vitest": "3.2.4"
  }
}
